<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"> <!-- Changed to white -->

    <!-- Heading (Walmart Store) -->
    <TextView
        android:id="@+id/store_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Our Foodz Stall!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Main Content Layout (Cart and Food RecyclerViews) -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <!-- LEFT SIDE (Cart) -->

        <!-- RIGHT SIDE (Food RecyclerView) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- RecyclerView for Cart Items -->

            <!-- Total Cost TextView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:padding="8dp" />

            <TextView
                android:id="@+id/total_cost_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:padding="8dp"
                android:text="Total: $0.00"
                android:textColor="#6A1B9A"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Action Buttons (Horizontal) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/purchase_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#6A1B9A"
                    android:padding="12dp"
                    android:text="Purchase Here"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#AB47BC"
                    android:padding="12dp"
                    android:text="Remove Selected"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#FFFFFF" />
    </LinearLayout>
</LinearLayout>
